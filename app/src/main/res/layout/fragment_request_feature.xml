<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.FeatureFragment">

    <TextView
        android:id="@+id/title_delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Загрузка динамических ресурсов"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="293dp"
        android:layout_height="372dp"
        android:src="@drawable/dynamic_delivery"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_delivery" />

    <TextView
        android:id="@+id/description_delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="165dp"
        android:gravity="center_horizontal"
        android:text="Необходимы дополнительные ресурсы..."
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.jiang.android.pbutton.CProgressButton
        android:id="@+id/btn"
        android:layout_width="105dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:textColor="?android:attr/colorEdgeEffect"
        android:textSize="12sp"
        app:color="?android:attr/colorEdgeEffect"
        app:drawable_xml="@drawable/bounder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:radius="40dp"
        app:stroke_width="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>